generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id                 String   @id @default(uuid())
  name               String
  city               String
  age_in_months      Float
  energy_level       Int
  independency_level Int
  requirements       String[]

  org       Org    @relation(fields: [org_email], references: [email])
  org_email String

  @@map("pets")
}

model Org {
  id            String @id @default(uuid())
  name          String
  email         String @unique
  password_hash String
  address       String
  phone_number  String

  pets Pet[]

  @@map("orgs")
}
